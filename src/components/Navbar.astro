  <style>
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 4rem;
      background-color: #dddddd28; /* Add a background color for visibility */
    }

    #logo {
      display: flex;
      align-items: center;
      font-size: 1.5rem;
      font-weight: bold;
    }

    #logo span {
      color: #eb5e28;
      align-items: center;
    }

    .marquee {
      position: relative;
      overflow: hidden;
      white-space: nowrap;
      background-color: #eb5e28;
      padding: 0.5rem 0;
    }

    .marquee-content {
      display: inline-block;
      white-space: nowrap;
      animation: marquee 20s linear infinite;
    }

    .marquee-item {
      display: inline-block;
      padding: 0 2rem;
      font-size: 1.1rem;
    }

    @keyframes marquee {
      0% {
        transform: translateX(0%);
      }
      100% {
        transform: translateX(-50%);
      }
    }
    /*
    
    @media (max-width: 768px) {
